ion-view
    ion-nav-title Profile
    ion-content.profile-content.padding
        .wrapper-avatar
            .avatar(style="{{vm.profile.avatar ? 'background-image:url('+vm.profile.avatar+')' : 'background-image:url(assets/images/avatar.png)'}}", ng-click="vm.pictureUpdate()")
            //img.avatar(ng-src="{{vm.profile.avatar || 'assets/images/avatar.png'}}", err-src="assets/images/avatar.png", ng-click="vm.pictureUpdate()")
        .list
            label.item.item-input
                span.input-label Username
                input(type="text" ng-model='vm.profile.username')
            label.item.item-input.item-select
                .input-label Sexuality
                select(ng-model="vm.profile.sexuality")
                    option(value="androgynosexual" selected="{{vm.profile.sexuality === 'androgynosexual'}}") Androgynosexual
                    option(value="androsexual" selected="{{vm.profile.sexuality === 'androsexual'}}") Androsexual
                    option(value="asexual" selected="{{vm.profile.sexuality === 'asexual'}}") Asexual
                    option(value="bisexual" selected="{{vm.profile.sexuality === 'bisexual'}}") Bisexual
                    option(value="demisexual" selected="{{vm.profile.sexuality === 'demisexual'}}") Demisexual
                    option(value="gay" selected="{{vm.profile.sexuality === 'gay'}}") Gay
                    option(value="gray" selected="{{vm.profile.sexuality === 'gray'}}") Gray
                    option(value="gynosexual" selected="{{vm.profile.sexuality === 'gynosexual'}}") Gynosexual
                    option(value="lesbian" selected="{{vm.profile.sexuality === 'lesbian'}}") Lesbian
                    option(value="queer" selected="{{vm.profile.sexuality === 'queer'}}") Queer
                    option(value="pansexual" selected="{{vm.profile.sexuality === 'pansexual'}}") Pansexual
                    option(value="polysexual" selected="{{vm.profile.sexuality === 'polysexual'}}") Polysexual
            label.item.item-input
                span.input-label Gender
                input(type='text' ng-model='vm.profile.gender')
            label.item.item-input
                span.input-label Birthday
                input(type='date' ng-model='vm.profile.birthday' placeholder='date of birth')
            label.item.item-input
                input(type='text' ng-model='vm.profile.pronouns' placeholder='Pronouns')
            label.item.item-input
                textarea(type='text' ng-model='vm.profile.bio' placeholder='Some words about yourself {200 characters}' maxlength='200')
            .item.item-toggle
                | Location
                label.toggle.toggle-calm
                    input(type="checkbox" ng-model='vm.profile.loc')
                    .track
                        .handle
        button.button.button-block.button-calm(ng-click='vm.profileUpdate(vm.profile)') Update profile