ion-side-menus
    ion-side-menu-content(drag-content='false')
        ion-nav-bar.bar-header.bar-calm
            ion-nav-buttons
                button.button.button-icon.ion-navicon.open-menu(menu-toggle='left')
        ion-nav-view(name='menuContent')
    ion-side-menu.menu(side='left')
        ion-header-bar.bar-header.bar-calm
            button.button.button-icon.ion-android-arrow-back.close-menu(menu-toggle='left')
            .title.title-left.header-item
                span.logo THURST CO
        ion-content(scroll='false')
            ion-scroll.height-100
                ul.list.menu-list
                    a.item(menu-close='', class='item-icon-left', ui-sref='app.profile', ng-class="{'selected':vm.now==='app.profile'}")
                        i.icon.ion-person
                        |  Profile
                    a.item(menu-close='', class='item-icon-left', ui-sref='app.messages', ng-class="{'selected':vm.now==='app.messages'}")
                        i.icon.ion-chatboxes
                        |  Messages
                    a.item(menu-close='', class='item-icon-left', ui-sref='app.connections', ng-class="{'selected':vm.now==='app.connections'}")
                        i.icon.ion-person-stalker
                        |  Connections
                    a.item(menu-close='', class='item-icon-left', ui-sref='app.search', ng-class="{'selected':vm.now==='app.search'}")
                        i.icon.ion-search
                        |  Search
                    a.item(menu-close='', class='item-icon-left', ui-sref='app.settings', ng-class="{'selected':vm.now==='app.settings'}")
                        i.icon.ion-settings
                        |  Settings
                    a.item(menu-close='', class='item-icon-left', ui-sref='app.support', ng-class="{'selected':vm.now==='app.support'}")
                        i.icon.ion-help-circled
                        |  Support
                    a.item(menu-close='', class='item-icon-left', ng-click="vm.logout()")
                        i.icon.ion-key
                        |  Logout


