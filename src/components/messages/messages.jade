ion-view
    ion-nav-title.logo Messages
    ion-content.messages-page
        ion-refresher(pulling-text="Pull to refresh..." on-refresh="vm.doRefresh()")
        ion-list
            ion-item.item-avatar.item-icon-right(ng-click="vm.message('1')")
                img(src="assets/images/avatar.png")
                .wrapper-text
                    h2 demo@email.com
                    p Demo
                i.icon.ion-compose
            ion-item.item-avatar.item-icon-right(ng-repeat="item in vm.list", ng-click="vm.message(item.userId)")
                img(ng-src="{{item.imageLink||'assets/images/avatar.png'}}")
                .wrapper-text
                    h2 {{item.email}}
                    p {{item.userName}}
                i.icon.ion-compose
