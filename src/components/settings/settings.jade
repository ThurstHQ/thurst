ion-view
    ion-nav-buttons(side='right')
        button.button.button-icon.ion-checkmark-round.save-profile(ng-click='vm.settingsUpdate(vm.new)')
    ion-nav-title.logo Settings
    ion-content.settings-page.padding(scroll='false')
        .wrapper
            .list
                label.item.item-input
                    input(type="email" ng-model="vm.new.email" placeholder="New email")
                label.item.item-input
                    input(type="password" ng-model="vm.new.password" placeholder="New password")
            button.button.button-clear.button-see-color See users of color only
        button.button.button-clear.button-hide-profile(ng-click="vm.hideProfile()", ng-class="{'blue-button':vm.user.invisible}") {{vm.user.invisible ? 'Show' : 'Hide'}} Profile Visibility
        button.button.button-clear.button-delete(ng-click="vm.deleteAccount()") Delete Account